#include <FastLED.h>

// Define # of LEDS in Series
#define HEADLIGHTS_NUM 1

// Define the array of leds
CRGB leds[HEADLIGHTS_NUM];

/////////////////////////////////////////////////////////////////////////////////////////////////////////
//                                     ///////////////                                                 //
//                                     END GLOBAL VARS                                                 //
//                                     ///////////////                                                 //
/////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////
// ======================================== INIT ===================================================== //
/////////////////////////////////////////////////////////////////////////////////////////////////////////
void initHeadlights()
{
    FastLED.addLeds<WS2811, HEADLIGHT_DATA_PIN, GRB>(leds, HEADLIGHTS_NUM);
    turnOnWhiteHeadlights();
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////
// LED functions                                                                                       //
/////////////////////////////////////////////////////////////////////////////////////////////////////////

void turnOnWhiteHeadlights()
{
    leds[0] = CRGB::White;
    FastLED.show();
}

void turnOnPurpleHeadlights()
{
    leds[0] = CRGB::Purple;
    FastLED.show();
}

void turnOnGreenHeadlights()
{
    leds[0] = CRGB::Green;
    FastLED.show();
}
